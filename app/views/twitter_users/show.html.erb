<%= h @account.screen_name %>
<ul>
<% @account.statuses.each do |status| -%>
	<li><%= h status.text %><%= link_to 'reply', status_reply_path(@account,status) %></li>
<% end -%>
</ul>

<% if @timeline -%>
	<ul>
		<% @timeline.each do |status| -%>
		<li><%= h status.user.screen_name %> <%= h status.text %></li>
		<% end -%>
<% else -%>
		<li>you don't own this account</li>
	</ul>
<% end -%>


<%= link_to 'Show statuses', twitter_user_twitter_statuses_path(@account) %>