<div class="message-list">
	<h2><%= h title %></h2>
	<% statuses.each do |status| %>
	<p>
		<%= twitter_user_profile_image(status.poster)%>
		<strong><%= twitter_user_link(status.poster) %>:</strong> <%= status.text %></p>
		<p>poster <%= h friendly_time(status.created_at) %>
	<p class="reply-link"><%= link_to "Reply", status_reply_path(account, status.id) %></p>
	<p class="birdherd-user"><%= "Posted by: #{h status.birdherd_user.login} (#{status.birdherd_user.email})" unless status.birdherd_user.nil? %></p>
		<p>Replied to by: <%= h reply_users_string(status) %></p>
	<% end -%>
</div>