<ul>
	<% @accounts.each do |account| %>
		<li><%= link_to "@#{account.screen_name}", user_twitter_user_path(account) %> - Followers <%= h account.followers.count %>, Followering <%= h account.friends.count %></li>
		<% end %>
</ul>

