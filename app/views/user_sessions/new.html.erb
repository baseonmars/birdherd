<div id="signin-form" class="user-form">
<h2>Sign in</h2>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %>
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <br />
  <%= f.label :remember_me, "Remember me? #{f.check_box(:remember_me)}", :class => 'checkbox' %><br />
  <br />
  <%= f.submit "Sign in" %>
<% end %>
</div>
<div class="user-form">
<h2>Sign up</h2>

<% form_for @user, :url => user_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "/users/form", :object => f %>
	<br />
  <%= f.submit "Sign up" %>
<% end %>

</div>