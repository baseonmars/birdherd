<% form_for([twitter_account, status]) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <%= f.hidden_field :poster_id %>

  <p>
    <%= f.label "What are you doing?" %><br />
    <%= f.text_area :text, :cols => 70, :rows => 3 %>

  </p>

  <p>
    <%= f.submit 'update' %>
  </p>
<% end %>