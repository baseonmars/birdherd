<%= twitter_user_profile_image(message.sender)%>
<h3><strong><%= twitter_user_link(message.sender) %></strong></h3>
<p><%= auto_link(message.text) %></p>
<p class="status-time">posted <%= h friendly_time(message.created_at) %></p>
<p class="reply-link"><%= link_to "Reply", status_reply_path(account, message.id) %></p>
<% unless message.birdherd_user.nil? -%>
	<p class="birdherd-user">Posted by: <%= "#{h message.birdherd_user.login} (#{message.birdherd_user.email})" %></p>
<% end -%>
<% unless reply_users_string(message).blank? %>
	<p>Replied to by: <%= h reply_users_string(message) %></p>
<% end -%>